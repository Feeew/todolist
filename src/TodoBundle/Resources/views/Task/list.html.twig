{% extends 'base.html.twig' %}

{% block body %}

    <h1>Tasks list</h1>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Title <a href="{{ path(mon_path, { 'field': 'label', 'order': 'desc'} ) }}"><span class="glyphicon glyphicon-chevron-up"></span></a>  <a href="{{ path(mon_path) }}"><span class="glyphicon glyphicon-chevron-down"></span></a>
            </th>
            <th>
                Due date <a href="{{ path(mon_path, {'field': 'dueDate', 'order': 'desc'} ) }}"><span class="glyphicon glyphicon-chevron-up"></span></a>  <a href="{{ path(mon_path, {'field': 'dueDate'} ) }}"><span class="glyphicon glyphicon-chevron-down"></span></a>
            </th>
            <th>
                Created at <a href="{{ path(mon_path, {'field': 'createdAt', 'order': 'desc'} ) }}"><span class="glyphicon glyphicon-chevron-up"></span></a>  <a href="{{ path(mon_path, {'field': 'createdAt'} ) }}"><span class="glyphicon glyphicon-chevron-down"></span></a>
            </th>
            <th>
                Category
            </th>
            <th>
                Tags
            </th>
            <th>
                Share
            </th>
        </tr>
    {% for task in pagination %}
        <tr>
            <td class="col-xs-2">
                {{ task.label }}
            </td>
            <td class="col-xs-2">
                {{ task.dueDate|date("d-m-Y H:i") }}
            </td>
            <td class="col-xs-2">
                {{ task.createdAt|date("d-m-Y H:i") }}
            </td>
            <td class="col-xs-2">
                {% if task.category is not null %}
                    <a class="label label-default" href="{{ path('list_task_category', {id: task.category.id}) }}" style="background-color: {{ task.category.color }}; color: white">{{ task.category.name }}</a>
                {% endif %}
            </td>
            <td>
                {% for tag in task.tag %}
                <a href="{{ path('list_task_tag', {tag: tag.id}) }}"><span class="glyphicon glyphicon-tag"></span> {{ tag.title }}</a>
                {% endfor %}
            </td>
            <td>
                {% set subject = 'Partage d\'une tache' %}
                {% set body = 'Label: '~task.label~', description: '~task.description~', date echeance: '~task.dueDate|date('Y-m-d H:i:s') %}

                <a href="mailto:?subject={{ subject|url_encode }}&body={{ body|url_encode }}">
                    Envoyer mail
                </a>
            </td>
        </tr>
    {% else %}
        <tr><td>{% trans %}task.empty_list{% endtrans %}</td></tr>
    {% endfor %}
    </table>
{% endblock %}