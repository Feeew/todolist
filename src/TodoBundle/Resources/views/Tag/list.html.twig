{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tags list</h1>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Nom tag</th>
            <th>Nombre tâches associées</th>
        </tr>
    {% for tag in tags %}
        <tr><td><a href="{{ path('list_task_tag', {tag: tag.id}) }}"><span class="glyphicon glyphicon-tag"></span> {{ tag.title }}</a></td><td>{{ tag.nbTaches }}</td></tr>
    {% else %}
        <tr><td>{% trans %}tag.empty_list{% endtrans %}</td><td></td></tr>
    {% endfor %}
    </table>
{% endblock %}